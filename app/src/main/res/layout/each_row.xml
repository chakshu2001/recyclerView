<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    android:layout_margin="9dp"
    app:cardCornerRadius="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/headingImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/pic0"
            android:layout_margin="10dp"
            app:shapeAppearanceOverlay="@style/SoftCorner">


        </com.google.android.material.imageview.ShapeableImageView>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tvHeadingTitle"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16dp"
            android:text="Ukraine, Russia and the tense UN encounter that almost happened — but didn’t"
            android:layout_gravity="center"
            >

        </TextView>
    </LinearLayout>

</androidx.cardview.widget.CardView>